@model SignalRMVCChat.Models.Question

@{
    ViewData["Title"] = "Specific";
}
<head>
    
    <style>
        #correctMessagesList {
            list-style-type: none;
            text-align: left;
            padding-top: 15px;
            margin-bottom: 15px;
            height: 285px;
            width: 100%;
            overflow-y: scroll;
        }
        #messagesList {
            list-style-type: none;
            text-align: left;
            padding-top: 15px;
            margin-bottom: 15px;
            height: 285px;
            width: 100%;
            overflow-y: scroll;
        }

            #messagesList li {
                padding-bottom: 15px;
                border-bottom:solid;
                border-bottom-width:0.5px;
                word-wrap: break-word;
                width:90%;
            }

                #messagesList li .user {
                    font-weight: bold;
                    margin-right: 5px;
                    padding-left:15px;
                }

                #messagesList li .time {
                    color: #999;
                    
                }

                #messagesList li .message {
                    padding-top: 5px;
                    padding-left: 15px;
                }

                #messagesList li .rightAnswerBtn {
                    float:right;
                   
                }

              
    
    </style>
</head>

<div>

    <a asp-action="Index">Back to List</a>
</div>
<h1>Specific</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
       
        <dd class="col-sm-10" id="questionId" hidden="hidden">
             @Html.DisplayFor(model=>model.Id)
        </dd>
    </dl>
</div>



<div class="container">
    <div class="row">&nbsp;</div>
    <div>
        <h3>
           
                @Html.DisplayFor(model => model.Description)
           
        </h3>

    </div>
    <div class="row">
        <h2>Correct answers</h2>
        <ul id="correctMessagesList"></ul>

    </div>
    <h2>All answers</h2>
            <ul id="messagesList"></ul>
        
    </div>
    <div class="row">
        
        @*<div class="col-6">&nbsp;</div>*@
        <div>
            @*User<input type="text" id="userInput" />
            <br />*@
            Message    <input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>

</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
